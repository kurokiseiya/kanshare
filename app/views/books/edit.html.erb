<div class="books-new">
  <% if flash[:book_edit_alert] %>
  <div class="book_edit_alert_area">
    <p class="book_edit_alert"><%= flash[:book_edit_alert] %></p>
  </div>
  <% end %>
  <h1 class="books-new-theme">BOOK編集</h1>
  <%= form_with model: @book, local:true do |f| %>
  <div class="books-new-form">
    <div class="books-new-title-part">
      <h2 class="books-new-title-label">本のタイトル</h2>
      <%= f.text_field :book_title, class: "books-new-title-form" %>
    </div>
    <div class="books-new-subtitle-part">
      <h3 class="books-new-subtitle-label">本のサブタイトル</h3>
      <%= f.text_field :book_subtitle, class: "books-new-subtitle-form" %>
    </div>
    <div class="books-new-caption-part">
      <h3 class="books-new-caption-label">本の感想</h3>
      <%= f.text_area :book_caption, class: "books-new-caption-form" %>
    </div>
    <div class="books-new-url-part">
      <h3 class="books-new-url-label">購入時URL</h3>
      <%= f.text_field :book_url, class: "books-new-url-form" %>
    </div>
    <div class="books-new-image-part">
      <h3 class="books-new-image-label">本の写真</h3>
      <%= f.attachment_field :book_image, placeholder: "プロフィール画像", class: "books-new-image-form" %>
    </div>
      <%= f.submit '更新', class: "books-new-form-button btn btn-info w-50 btn-bg" %>
  </div>
  <% end %>
</div>
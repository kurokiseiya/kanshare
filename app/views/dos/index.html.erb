<div class="dos-index">
  <% if flash[:do_new_success] %>
    <p class="do_new_success"><%= flash[:do_new_success] %></p>
  <% end %>
  <% if flash[:do_destroy_success] %>
    <p class="do_destroy_success"><%= flash[:do_destroy_success] %></p>
  <% end %>
  <% if flash[:do_edit_success] %>
    <p class="do_edit_success"><%= flash[:do_edit_success] %></p>
  <% end %>
  <%= link_to new_do_path, data: {"turbolinks" => false} do %>
    <div class="dos-tonew">
      <i class="fas fa-pen-alt"></i>
    </div>
  <% end %>
  <div class="dos">
    <% @dos.each do |todo| %>
    <div class="do-item">
      <div class="do-contributor">
        <%= link_to user_path(todo.user) do %>
          <%= attachment_image_tag todo.user, :profile_image, fallback: "no_user_image.png", class: "do-contributor-image" %>
        <% end %>
        <h2 class="do-contributor-name"><%= todo.user.name %></h2>
        <label class="do-posted-day"><%= todo.created_at.strftime('%Y/%m/%d %H:%M') %></label>
      </div>
      <%= link_to do_path(todo.id), class: "link-none" do %>
      <div class="do-details">
        <div class="do-details-category">
          <div class="do-details-text">
            <div class="do-details-text-word"><%= simple_format(todo.do_text) %></div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>